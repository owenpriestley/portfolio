// LAYOUT

.title
    opacity 0.6
    font-weight 700
    font-style italic
    display table-cell
    vertical-align middle
    font-size 40px
    border 6px solid #84cff6
    height 2.5em
    width 2.5em
    text-align center
    color #84cff6
    text-rendering optimizeLegibility
    &:hover
        transition 0.3s
        opacity 1
        cursor pointer

.wrapper
    min-height 100vh
    display flex
    flex-direction column

.header
    height: 100px;
    margin-top: 3%;
    margin-left: 5%;

.content
    display flex
    flex 1

.columns
    display flex
    flex 1

.nav
    font-size 13px
    color #000102
    text-align left
    padding-left 10px
    line-height 170%
    list-style-type none

.nav-head
    font-size 2em
    font-weight 700

button.nav
    border none
    text-decoration none
    color #000102
    padding 0
    cursor pointer
    text-rendering optimizeLegibility
    background no-repeat

.hide
    line-height 2.5
    &:hover
        outline none
        font-weight 500
.nav .cd
    outline none
    &:hover
        color #50a471

.nav .selected .cd
    outline none
    color #50a471
    font-weight 500

.nav .tw
    &:hover
        outline none
        color #e3a731

.nav .selected .tw 
    outline none
    color #e3a731
    font-weight 500

.nav .wd
    &:hover
        outline none
        color #0B486B

.nav .selected .wd
    outline none
    color #0B486B
    font-weight 500

.main
    flex 1
    order 2
    width 60%
    max-width 60%
    
.sidebar-first
    width 21.5em
    opacity 0.6
    padding-left 1em
    padding-top 1em
    margin-left 5%
    &:hover
        transition 0.3s
        opacity 1

.nav li.selected
    list-style square

.sidebar-second
    color #f3a551
    width 20%
    order 3
    margin-left 5%
    padding-top 8px

#responseIntro
    border-style solid
    border-color #cccccc
    color #fdfeec
    background-color #0b486b
    border-width 4px
    padding 3%
    margin bottom 3%
    

img {
    max-width: 100%
