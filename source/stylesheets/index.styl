// LAYOUT

.title
    opacity 0.6
    font-weight 700
    font-style italic
    display table-cell
    vertical-align middle
    font-size 40px
    border 6px solid #84cff6
    height 60px
    width 350px
    text-align center
    color #84cff6
    text-rendering optimizeLegibility
    &:hover
        opacity 1
        cursor pointer

.wrapper
    min-height 100vh
    display flex
    flex-direction column

.header
    height: 100px;
    margin-top: 3%;
    margin-left: 5%;

.content
    display flex
    flex 1

.columns
    display flex
    flex 1

.nav
    font-size 13px
    color #000102
    text-align left
    padding-left 10px
    line-height 170%
    list-style-type none

.nav-head
    font-size 15px
    font-weight 700
    font-style italic
    color #e3a731

button.nav
    border none
    text-decoration none
    color #000102
    padding 0
    cursor pointer
    text-rendering optimizeLegibility

.hide
    line-height 2.5
    &:hover
        outline none
        font-weight 500

.cd
    &:focus
        outline none
        color #50a471
        font-weight 500

.tw
    &:focus
        outline none
        color #e3a731
        font-weight 500

.wd
    &:focus
        outline none
        color #0B486B
        font-weight 500

.main
    flex 1
    order 2

.sidebar-first
    width 20%
    order 1
    margin-left 5%
    padding-top 8px

.sidebar-second
    color #f3a551
    width 20%
    order 3
    margin-left 5%
    padding-top 8px

#responseIntro
    opacity 0.7
    border-style solid
    border-color #cccccc
    border-width 4px
    font-size 14px
    padding 3%
    margin bottom 3%
    &:hover
        opacity 1