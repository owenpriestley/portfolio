// PALETTE

.yellow
    color #e3a731
.orange 
    color #f3a551
.beige 
    color #fffce9 
.blue 
    color #0B486B
.pale-blue 
    color #84cff6
.green 
    color #50a471
.red 
    color #df3c31
.gray 
    color #2d2d2b
.off-white 
    color #fdfeec
.off-black 
    color #000102
.darkish-gray
    color #000102b0

// TYPOGRAPHY

body
    margin 0
    font-family 'Open Sans', sans-serif
    font-size 0.95em
    line-height 1.5
    text-rendering optimizeLegibility
    border-top 5px solid #f3a551bf

body p
    line-height 2

.note
    padding-left 7px
    font-size 85%
    color black
    
.notehead
    font-weight bold
    color #50a471

h1
    margin 0
    font-weight 700
    font-size 2.5em
    color #000102
    letter-spacing 0.005em

.h-intro
    font-size 1.4em
    font-weight 700
    opacity 0.9
    letter-spacing 0.005em
    color #000102cc

.h-intro-what
    color white

.h-body
    font-size 2em
    font-weight 700
    opacity 0.9
    letter-spacing 0.005em
    color #0b486b
    margin-top 2em
    padding-bottom 0.2em
    border-bottom 2px solid #0b486b

h1, h2, h3
    color #0B486B

h2
    font-weight 700
    font-size 2.5em
    letter-spacing 0.005em

h3
    font-weight 700
    font-size 2em
    letter-spacing 0.005em

a
    text-decoration none
    color black
    border-bottom #0B486B 1px solid
    transition 0.3s
    &:visited
        color black
    &:hover
        color #0b486b
    
p.inside
    font-weight 600
    margin-left 10px
    margin-top 2px
    margin-bottom 2px
    color white !important


// STATS

.stat-n h3
    color white
    font-size 1em
    font-weight 700
    line-height 0.3em
    margin 0

.stat-n p
    color white
    font-size 0.8em
    line-height 1.5
    text-rendering optimizeLegibility
    margin-bottom 1.25em
    margin-top 1.25em
    margin-left 0.2em

.stat h3
    color white
    font-size 2em
    font-weight 700
    line-height 0.3em
    margin 0

.stat p
    color white
    font-size 0.8em
    line-height 1.25em
    margin-bottom 1.25em
    margin-top 1.25em
    margin-left 0.2em    

@media screen and (min-width: 600px){
  .h-body {
      font-size 3em
  }
  h1 {
      font-size 3.5em
  }
  .stat-n h3 {
      font-size 2em
  }

  .stat-n p {
      font-size 1em
  }

  .stat h3 {
      font-size 3em
  }

  .stat p {
      font-size 1em
  }

}
