// TYPOGRAPHY

body
    margin 0
    font-family 'Open Sans', sans-serif
    font-size 1em
    line-height 1.5
    text-rendering optimizeLegibility

.note
    padding-left 7px
    font-size 85%
    color black
    
.notehead
    font-weight bold
    color #50a471

h1
    padding-top 7%
    margin 0
    font-weight 700
    font-size 2em
    color #000102
    letter-spacing 0.005em

.introh1
    font-size 4em
    padding 0
    font-weight 700
    float left
    padding-right 10px
    opacity 0.9
    letter-spacing 0.005em
    color black

h1, h2, h3
    color #0B486B

h2
    font-weight 700
    font-size 1.5em
    letter-spacing 0.005em

h3
    font-weight 700
    font-size 1.2em
    letter-spacing 0.005em

a
    text-decoration none
    color black
    border-bottom #0B486B 1px solid
    transition 0.3s
    &:visited
        color black
    &:hover
        color #84cff6
    
